<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.test.bitmap.BitmapSplitActivity"
    tools:showIn="@layout/activity_bitmap_split"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/img2"
        android:layout_width="125dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/sanzhi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="125dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/sanzhi"
        app:layout_constraintRight_toLeftOf="@+id/img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="125dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/sanzhi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img"
        app:layout_constraintBottom_toTopOf="@+id/img3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="125dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/sanzhi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img2"
        app:layout_constraintTop_toBottomOf="@+id/img1" />

</android.support.constraint.ConstraintLayout>
